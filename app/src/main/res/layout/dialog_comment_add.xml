<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="@drawable/shape_rect02">

    <!--nut back-->
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backBtn"
        android:src="@drawable/ic_back_black"
        android:background="@android:color/transparent"
        android:padding="5dp"
        app:tint="@color/word_2" />

    <!--tieu de dialog-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleTv"
        android:fontFamily="sans-serif-condensed"
        android:padding="5dp"
        android:text="Thêm bình luận"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/word_2"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/background_1"
        android:id="@+id/commentTil"
        android:layout_below="@+id/backBtn"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/word_1">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commentEt"
            android:drawableStart="@drawable/ic_insert_comment_black"
            android:drawablePadding="5dp"
            android:drawableTint="@color/word_1"
            android:textColor="@color/word_1"
            android:hint="Bình luận" />

    </com.google.android.material.textfield.TextInputLayout>

    <!--nut submit-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submitCommentBtn"
        android:layout_below="@+id/commentTil"
        android:gravity="center_horizontal"
        android:paddingVertical="10dp"
        android:text="Bình luận"
        android:textColor="@color/white"
        android:background="@drawable/button_rectangle_3"
        android:layout_marginTop="10dp"/>

</RelativeLayout>